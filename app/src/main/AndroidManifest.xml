<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.huma.popularmovies"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MovieListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <!--
                        <intent-filter>
                            <action android:name="android.intent.action.MAIN"/>

                            <category android:name="android.intent.category.LAUNCHER"/>
                        </intent-filter>
            -->
        </activity>
        <activity
            android:name=".ui.MovieDetailActivity"
            android:label="@string/title_movie_detail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MovieListActivity"/>
        </activity>

        <provider
            android:name=".db.MovieContentProvider"
            android:authorities="com.example.android.popularMovies.app"
            android:enabled="true"
            android:exported="false">
        </provider>

        <activity
            android:name=".ui.movies_list.MoviesListActivity"
            android:label="@string/title_activity_movies_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>